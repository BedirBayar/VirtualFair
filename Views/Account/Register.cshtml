@model VirtualFair.Models.RegisterModels.RegisterUser

<h3>Sanal Fuar Platformuna Kayıt Ol</h3><h4>ve fuarları ziyaret etmeye başla...</h4>

<form class="m-1 p-1" method="post" asp-controller="Account" asp-action="Register">

    <div class="form-group">
        <label asp-for="Name">Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Password">Parola</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="submit" value="Oluştur" class="btn btn-primary" />

</form>

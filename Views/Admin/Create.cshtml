@model VirtualFair.Models.RegisterModels.RegisterUser

<h2 >Kullanıcı Oluştur</h2>

<form class="m-1 p-1" method="post" asp-action="Create">

    <div class="form-group">
        <label asp-for="Name">Adı</label>
        <input asp-for="Name" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="Password" >Parola</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="text-danger" asp-validation-summary="All"></div>

    <input type="submit" value="Oluştur" class="btn btn-primary" />

</form>
